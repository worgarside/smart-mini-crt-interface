[Unit]
Description=Fan Controller Service
After=multi-user.target
StartLimitBurst=10
StartLimitIntervalSec=10

[Service]
Type=simple
Restart=always
RestartSec=5
User=pi
ExecStart=/home/pi/.pyenv/shims/python /home/pi/smart-mini-crt-interface/src/fan_controller.py

[Install]
WantedBy=multi-user.target